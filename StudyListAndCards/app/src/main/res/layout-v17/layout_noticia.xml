<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_vh_noticia">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_horizontal_noticia"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mock_id_noticia"
                android:id="@+id/id_noticia"
                android:textSize="35sp"
                android:layout_span="1"
                android:layout_column="0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_span="1"
                android:layout_column="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_titulo_noticia"
                    android:id="@+id/titulo_noticia"
                    android:textSize="20sp"
                    android:layout_gravity="top|bottom" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_referencia"
                    android:id="@+id/referencia_noticia"
                    android:textSize="20sp"
                    android:layout_gravity="bottom" />
            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mock_texto_noticia"
                android:id="@+id/texto_noticia"
                android:textSize="20sp"
                android:singleLine="false"
                android:layout_span="2" />
        </TableRow>

    </TableLayout>


</LinearLayout>