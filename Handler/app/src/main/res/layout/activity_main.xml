<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.br.studyhandler.book.gooand.MainActivity">

    <TextView
        android:id="@+id/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/send_delay_message_handler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_message"
        android:onClick="sendDelayedMessage"
        />


    <Button
        android:id="@+id/send_empty_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_message"
        android:onClick="actionSendEmptyMessage"
        />

    <Button
        android:id="@+id/post_message_handler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/post_message"
        android:onClick="actionPostMessage"
        />


</LinearLayout>
